<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scrollView"
    xmlns:android="http://schemas.android.com/apk/res/android" >

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="385dp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context="com.wickerlabs.exp_tr.Today"
    android:background="#ece8e8"
    android:paddingLeft="5dp"
    android:paddingRight="5dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/today_card1"
        card_view:cardCornerRadius="10dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp" >

        <!--weka contents za card humooo-->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="3dp"
            android:src="@drawable/car"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transport"
            android:id="@+id/today_transText"
            android:textSize="30dp"
            android:gravity="center"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/today_transCash"
            android:textSize="30dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="right"
            android:layout_marginTop="5dp"/>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/today_card2"
        card_view:cardCornerRadius="10dp"
        android:layout_below="@+id/today_card1"
        android:layout_alignLeft="@+id/today_card1"
        android:layout_alignStart="@+id/today_card1"
        android:layout_marginTop="5dp" >

        <!--weka contents za card humo-->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="3dp"
            android:src="@drawable/invoice"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bills"
            android:id="@+id/today_billsText"
            android:textSize="30dp"
            android:gravity="center"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/today_billsCash"
            android:textSize="30dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="right"
            android:layout_marginTop="5dp"/>

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/today_card3"
        card_view:cardCornerRadius="10dp"
        android:layout_below="@+id/today_card2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp" >

        <!--weka content za card humo-->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="3dp"
            android:src="@drawable/shopping_bag"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shopping"
            android:id="@+id/today_shopngText"
            android:textSize="30dp"
            android:gravity="center"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/today_shopngCash"
            android:textSize="30dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="right"
            android:layout_marginTop="5dp"/>

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/today_card4"
        card_view:cardCornerRadius="10dp"
        android:layout_below="@+id/today_card3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp" >

        <!--weka content za card humo-->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="3dp"
            android:src="@drawable/foods"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Foods"
            android:id="@+id/today_foodText"
            android:textSize="30dp"
            android:gravity="center"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/today_foodsCash"
            android:textSize="30dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="right"
            android:layout_marginTop="5dp"/>

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/today_card5"
        card_view:cardCornerRadius="10dp"
        android:layout_below="@+id/today_card4"
        android:layout_alignLeft="@+id/today_card4"
        android:layout_alignStart="@+id/today_card4"
        android:layout_marginTop="5dp" >

        <!--weka content za card humo-->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="3dp"
            android:src="@drawable/phone_call"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Credits"
            android:id="@+id/today_creditsText"
            android:textSize="30dp"
            android:gravity="center"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/today_creditsCash"
            android:textSize="30dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="right"
            android:layout_marginTop="5dp"/>

    </android.support.v7.widget.CardView>


</RelativeLayout>
</ScrollView>