<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scrollView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/bg">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="385dp"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        tools:context=".Expenses.Today"
        android:background="#ece8e8"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/yesterday_card1"
            card_view:elevation="10dp"
            card_view:cardCornerRadius="10dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp" >

            <!--weka contents za card humooo-->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="3dp"
                android:src="@drawable/car"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transport"
                android:id="@+id/yest_transText"
                android:textSize="30dp"
                android:gravity="center"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/yest_transCash"
                android:textSize="30dp"
                android:layout_marginRight="5dp"
                android:layout_gravity="right"
                android:layout_marginTop="5dp"/>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/yesterday_card2"
            card_view:elevation="10dp"
            card_view:cardCornerRadius="10dp"
            android:layout_below="@+id/yesterday_card1"
            android:layout_alignLeft="@+id/yesterday_card1"
            android:layout_alignStart="@+id/yesterday_card1"
            android:layout_marginTop="5dp" >

            <!--weka contents za card humo-->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="3dp"
                android:src="@drawable/invoice"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bills"
                android:id="@+id/yest_billsText"
                android:textSize="30dp"
                android:gravity="center"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/yest_billsCash"
                android:textSize="30dp"
                android:layout_marginRight="5dp"
                android:layout_gravity="right"
                android:layout_marginTop="5dp"/>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/yesterday_card3"
            card_view:elevation="10dp"
            card_view:cardCornerRadius="10dp"
            android:layout_below="@+id/yesterday_card2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp" >

            <!--weka content za card humo-->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="3dp"
                android:src="@drawable/shopping_bag"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shopping"
                android:id="@+id/yest_shopngText"
                android:textSize="30dp"
                android:gravity="center"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/yest_shopngCash"
                android:textSize="30dp"
                android:layout_marginRight="5dp"
                android:layout_gravity="right"
                android:layout_marginTop="5dp"/>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/yesterday_card4"
            card_view:elevation="10dp"
            card_view:cardCornerRadius="10dp"
            android:layout_below="@+id/yesterday_card3"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp" >

            <!--weka content za card humo-->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="3dp"
                android:src="@drawable/foods"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Foods"
                android:id="@+id/yest_foodText"
                android:textSize="30dp"
                android:gravity="center"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/yest_foodsCash"
                android:textSize="30dp"
                android:layout_marginRight="5dp"
                android:layout_gravity="right"
                android:layout_marginTop="5dp"/>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/today_card5"
            card_view:elevation="10dp"
            card_view:cardCornerRadius="10dp"
            android:layout_below="@+id/yesterday_card4"
            android:layout_alignLeft="@+id/yesterday_card4"
            android:layout_alignStart="@+id/yesterday_card4"
            android:layout_marginTop="5dp" >

            <!--weka content za card humo-->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="3dp"
                android:src="@drawable/phone_call"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Credits"
                android:id="@+id/yest_creditsText"
                android:textSize="30dp"
                android:gravity="center"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/yest_creditsCash"
                android:textSize="30dp"
                android:layout_marginRight="5dp"
                android:layout_gravity="right"
                android:layout_marginTop="5dp"/>

        </android.support.v7.widget.CardView>


    </RelativeLayout>
</ScrollView>